post_install() {
    echo ""
    echo "If you wish to run tosu without sudo: sudo setcap cap_sys_ptrace=eip /opt/tosu/tosu"
    echo ""
    echo "To start tosu automatically on login: systemctl --user enable --now tosu.service"
    echo "Or enable it globally: sudo systemctl enable --now tosu.service"
    echo ""
}

post_upgrade() {
    post_install
}
